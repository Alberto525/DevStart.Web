<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="~/css/Principal.css" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.0/css/all.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body class="fixed-sn black-skin">

    <div class="modal-webloading" style="display: none;">
        <div style="background-color: #000;position: fixed; top: 0; right: 0; bottom: 0; left: 0; z-index: 1060;opacity: 0.20;"></div>
        <div id="webLoading">

            <div class="spinner-grow text-danger" role="status">
                <span class="sr-only">Loading...</span>
            </div>
            <div class="spinner-grow text-danger" role="status">
                <span class="sr-only">Loading...</span>
            </div>
            <div class="spinner-grow text-danger" role="status">
                <span class="sr-only">Loading...</span>
            </div>
            <div class="spinner-grow text-danger" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
    </div>

    <!--Double navigation-->
    <header>
        <!-- Sidebar navigation -->
        <div id="slide-out" class="side-nav sn-bg-4 fixed">
            <ul class="custom-scrollbar">
                <!-- Logo -->
                <li>
                    <div class="logo-wrapper waves-light">
                        <a href="#"><img src="~/imagenes/Logo.png" class="img-fluid flex-center"></a>
                    </div>
                    <a class="logotitle">Asisste</a>
                </li>
                <!--/. Logo -->
                <!--Social-->
                <!--/.Search Form-->
                <!-- Side navigation links -->
                <li>
                    <ul class="collapsible collapsible-accordion">
                        <li>
                            <i class="users"></i>
                            <a class="collapsible-header waves-effect arrow-r">
                                Usuario<i class="fas fa-angle-down rotate-icon"></i>
                            </a>
                            <div class="collapsible-body">
                                <ul class="list-unstyled">
                                    <li>
                                        <a href="@Url.Action("Index", null, new { area = "Persona", controller = "T_Persona" }, Request.Url.Scheme)" class="waves-effect">Empleados</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("CreateUsuario", null, new { area = "Persona", controller = "T_Persona" }, Request.Url.Scheme)" class="elements">Crear Usuario</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li>
                            <i class="profile"></i>
                            <a class="collapsible-header waves-effect arrow-r">Perfil<i class="fas fa-angle-down rotate-icon"></i></a>
                            <div class="collapsible-body">
                                <ul class="list-unstyled">
                                    <li>
                                        <a href="@Url.Action("Index", null, new { area = "Perfil", controller = "T_Perfil" }, Request.Url.Scheme)" class="waves-effect">Ver Perfil</a>
                                    </li>

                                </ul>
                            </div>
                        </li>
                        <li>
                            <i class="dayworking"></i>
                            <a class="collapsible-header waves-effect arrow-r">
                                Jornada<i class="fas fa-angle-down rotate-icon"></i>
                            </a>
                            <div class="collapsible-body">
                                <ul class="list-unstyled">
                                    <li>
                                        <a href="@Url.Action("Index", null, new { area = "TipoJornada", controller = "T_TipoJornada" }, Request.Url.Scheme)" class="waves-effect">Tipo de Jornadas</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Index", null, new { area = "EmpleadoJornada", controller = "T_EmpleadoJornada" }, Request.Url.Scheme)" class="waves-effect">Jornadas de Empleados</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li>
                            <i class="enterprise"></i>
                            <a class="collapsible-header waves-effect arrow-r">Empresa<i class="fas fa-angle-down rotate-icon"></i></a>
                            <div class="collapsible-body">
                                <ul class="list-unstyled">
                                    <li>
                                        <a href="@Url.Action("Index", null, new { area = "Empresa", controller = "Empresa" }, Request.Url.Scheme)" class="waves-effect">Ver Empresa</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li>
                            <i class="assistance"></i>
                            <a class="collapsible-header waves-effect arrow-r"> Marcaciones<i class="fas fa-angle-down rotate-icon"></i></a>
                            <div class="collapsible-body">
                                <ul class="list-unstyled">
                                    <li>
                                        <a href="@Url.Action("Index", null, new { area = "Asistencia", controller = "T_Asistencia" }, Request.Url.Scheme)" class="waves-effect">Ver Marcaciones</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li>
                            <i class="report"></i>
                            <a class="collapsible-header waves-effect arrow-r"> Reportes<i class="fas fa-angle-down rotate-icon"></i></a>
                            <div class="collapsible-body">
                                <ul class="list-unstyled">
                                    <li>
                                        <a href="#" class="waves-effect">Ver Reportes</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <li>
                            <i class="helpemployee"></i>
                            <a class="collapsible-header waves-effect arrow-r">Ayuda<i class="fas fa-angle-down rotate-icon"></i></a>
                            <div class="collapsible-body">
                                <ul class="list-unstyled">
                                    <li>
                                        <a href="#" class="waves-effect">FAQ</a>
                                    </li>
                                    <li>
                                        <a href="#" class="waves-effect">Write a message</a>
                                    </li>
                                    <li>
                                        <a href="#" class="waves-effect">FAQ</a>
                                    </li>
                              
                                </ul>
                            </div>
                        </li>
                    </ul>
                </li>
                <!--/. Side navigation links -->
            </ul>
            <div class="sidenav-bg mask-strong"></div>
        </div>
        <!--/. Sidebar navigation -->
        <!-- Navbar -->
        <nav class="navbar fixed-top navbar-toggleable-md navbar-expand-lg scrolling-navbar double-nav">
            <!-- SideNav slide-out button -->
            <i id="idmenu"></i>
            <div class="float-left">
                <a href="#" data-activates="slide-out" class="button-collapse black-text">
                    <!-- <i class="fas fa-bars"></i>-->
                    <i class="menu">                                    </i>
                </a>
            </div>
            <!-- Breadcrumb-->

            <ul class="nav navbar-nav nav-flex-icons ml-auto">
               
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown"
                       aria-haspopup="true" aria-expanded="false">
                        Usuario
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="#">Configuración de perfil</a>
                        <a class="dropdown-item" href="#">Cerrar sesión</a>

                    </div>
                </li>
            </ul>
        </nav>
        <!-- /.Navbar -->
    </header>
    <!--/.Double navigation-->

    <main>
        <div class="container body-content">
            @RenderBody()
        </div>
    </main>


    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(() => {
            // SideNav Initialization
            $(".button-collapse").sideNav();
            new WOW().init();
        })
    </script>
    <style>

        /* Only for snippet */
        .double-nav .breadcrumb-dn {
            color: #fff;
        }

        .button-collapse i {
            color: #fff
        }
    </style>

    <script src="~/js/Inicio.js"></script>
</body>
</html>
