@{
    ViewBag.Title = "Asisste";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<link href="https://fonts.googleapis.com/icon?family=Material+Icons"

      rel="stylesheet">


<link href="~/css/Login.css" rel="stylesheet" />

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Asisste</h5>
        <img id="idlogo" src="~/imagenes/Logo.png" />
    </div>
</div>


<input type="hidden" value="@ViewBag.localhost" id="idlocalhost" />

<div class="col-lg-5" style="margin: 0 auto;">
    <!-- Material form login -->
    <div class="card">



        <!--Card content-->
        <div class="card-body px-lg-5 pt-0">

            <!-- Form -->
            <form id="mainform" class="text-center" style="color: #000000;" method="post">

                <!-- Email -->
                <div class="md-form">
                    <i class="user"></i>
                    <input type="email" autocomplete="off" name="us" id="materialLoginFormEmail" class="form-control">
                    <label for="materialLoginFormEmail">Correo</label>
                </div>

                <!-- Password -->
                <div class="md-form">
                    <i class="pass"></i>
                    <input type="password" name="pw" id="materialLoginFormPassword" class="form-control">
                    <label for="materialLoginFormPassword">Contraseña</label>
                </div>

                <div class="d-flex justify-content-around">
        
                  
                    <div>
                        <!-- Forgot password -->
                        <a class="clsOlvidarContraseña" href="">Olvidaste la contraseña?</a>
                    </div>
                </div>



                <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" onclick="needcredentials()" type="button">Iniciar Sesión</button>


            </form>
            <!-- Form -->

        </div>

    </div>
    <!-- Material form login -->
</div>


<script src="~/js/Login/index.js"></script>