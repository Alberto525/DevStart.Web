@model List<Web.Marcacion.Models.T_TipoJornada>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Jornadas</h2>
@using (Html.BeginForm("Create", "T_TipoJornada", FormMethod.Get))
{
    <button type="submit" class="btn btn-primary">NUEVO</button>
}
    <div>
        <input id="buscar" type="text" class="form-control" placeholder="Escriba algo para filtrar" style="margin-bottom:20px; margin-left:auto; width:300px" />
    </div>
    <div class="row ">
        <div class="col-lg-12">
            <table class="table table-bordered" id="tabla">
                <thead>
                    <tr>
                        <th>DESCRIPCION</th>
                        <th>HORA DE ENTRADA</th>
                        <th>HORA DE SALIDA</th>
                        <th>ESTADO</th>
                        <th>ACCIONES</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var olista in Model)
                    {
                        <tr>
                            <td>@olista.Descripcion</td>
                            <td>@olista.HoraEntrada</td>
                            <td>@olista.HoraSalida</td>
                            <td>@olista.Estado</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = olista.ID_TipoJornada })  |
                                @Html.ActionLink("Detail", "Detail", new { id = olista.ID_TipoJornada }) |
                                @Html.ActionLink("Delete", "Delete", new { id = olista.ID_TipoJornada })

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

<script type="text/javascript">
    document.querySelector("#buscar").onkeyup = function () {
        $TableFilter("#tabla", this.value);
    }
    $TableFilter = function (id, value) {
        var rows = document.querySelectorAll(id + ' tbody tr');
        for (var i = 0; i < rows.length; i++) {
            var showRow = false;
            var row = rows[i];
            row.style.display = 'none';

            for (var x = 0; x < row.childElementCount; x++) {
                if (row.children[x].textContent.toLowerCase().indexOf(value.toLowerCase().trim()) > -1) {
                    showRow = true;
                    break;
                }
            }
            if (showRow) {
                row.style.display = null;
            }
        }
    }
</script>
