@model List<Web.Marcacion.Models.T_TipoJornada>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Jornadas</h2>
@using (Html.BeginForm("Create", "T_TipoJornada", FormMethod.Get))
{
    <button type="submit" class="btn btn-primary">NUEVO</button>
}

@using (Html.BeginForm("Delete", "T_TipoJornada", FormMethod.Get))
{
    <div class="row ">
        <div class="col-lg-12">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>DESCRIPCION</th>
                        <th>HORA DE ENTRADA</th>
                        <th>HORA DE SALIDA</th>
                        <th>ESTADO</th>
                        <th>ACCIONES</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var olista in Model)
                    {
                    <tr>
                        <td>@olista.Descripcion</td>
                        <td>@olista.HoraEntrada</td>
                        <td>@olista.HoraSalida</td>
                        <td>@olista.Estado</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = olista.ID_TipoJornada })  |
                            @Html.ActionLink("Detail", "Detail", new { id = olista.ID_TipoJornada }) |
                            @Html.ActionLink("Delete", "Delete", new { id = olista.ID_TipoJornada })

                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

}

