
@model List<Web.Marcacion.Models.T_Empresa>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<h2>Empresa</h2>
@using (Html.BeginForm("Create", "Empresa", FormMethod.Get))
{
    <button id="btnNuevo" type="submit" class="btn btn-primary btnmarc"></button>
    <label id="lblNuevo" for="btnNuevo">Nuevo</label>
}

@using (Html.BeginForm("Delete", "Empresa", FormMethod.Get))
{
    <div class="row ">
        <div class="col-lg-12">
            <table class="table table-bordered">
                <thead>
                    <tr>

                        <th>RAZON SOCIAL</th>
                        <th>RUC</th>
                        <th>GRUPO</th>
                        <th>DIRECCION</th>
                        <th>TELEFONO</th>
                        <th>ESTADO</th>
                        <th>ACCIONES</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var olista in Model)
                    {
                        <tr>
                            <td>@olista.RazonSocial</td>
                            <td>@olista.RUC</td>
                            <td>@olista.Grupo</td>
                            <td>@olista.Direccion</td>
                            <td>@olista.Telefono</td>
                            @if (@olista.Estado == true)
                            {
                                <td>
                                    <a class='material-icons' ;>check_circle</a>
                                </td>
                            }
                            else
                            {
                                <td>
                                    <a class='material-icons' ;>check_circle_outline</a>
                                </td>
                            }

                                <td>
                                    @Html.ActionLink("edit", "Edit", new { id = olista.ID_Empresa }, htmlAttributes: new { @class = "material-icons" })

                                    <a onclick="Detalles(@olista.ID_Empresa)" class='material-icons' ;>content_paste</a>
                                    @Html.ActionLink("delete", "Delete", new { id = olista.ID_Empresa }, htmlAttributes: new { @class = "material-icons" })

                                </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

}

    <script src="~/js/Empresa/JSEmpresa.js"></script>