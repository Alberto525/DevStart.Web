@model Web.Marcacion.Models.T_Persona

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-8 col-md-6 col-sm-12">
    <!-- Material form login -->
    <div class="card">
        <div class="card-header info-color white-text py-4t">
            Detalle Empleado
        </div>
        <!--Card content-->
        <div class="card-body px-lg-12 pt-0">
            <!-- Form -->
            <!--<form class="text-center" style="color: #757575;" action="" method="post">-->
            <!-- Descripcion -->

      

            <div class="row">
                <div class="col-md-6">
                    @Html.HiddenFor(model => model.ID_Persona)
                    <div class="md-form">
                        <i class="fas fa-envelope prefix" style="left:0"></i>
                        @Html.TextBoxFor(model => model.Nombre, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                        <label for="Descripcion">Nombre</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="md-form">
                        <i class="Apellido" style="left:0"></i>
                        @Html.TextBoxFor(model => model.Apellido, htmlAttributes: new { disabled = "disabled", @class = "form-control" })
                        <label id="idApellido" for="Apellido">Apellidos</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="md-form">
                        <i class="Correo" style="left:0"></i>
                        @Html.TextBoxFor(model => model.Correo, htmlAttributes: new { disabled = "disabled", @class = "form-control" })
                        <label id="idCorreo" for="Correo">Correo electronico</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="md-form">
                        <i class="Telefono" style="left:0"></i>
                        @Html.TextBoxFor(model => model.Movil, htmlAttributes: new { disabled = "disabled", @class = "form-control" })
                        <label id="idTelefono" for="Movil">Movil / Telefono</label>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="md-form">

                        <i class="PerDireccion" style="left:0"></i>

                        @Html.TextAreaFor(model => model.Direccion, htmlAttributes: new { disabled = "disabled", @class = "form-control" })

                        <label id="idPerDireccion" for="Direccion">Direccion</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="md-form">
                        <i class="NumeroDocumento" style="left:0"></i>
                        @Html.TextBoxFor(model => model.NumeroDocumento, htmlAttributes: new { disabled = "disabled", @class = "form-control" })
                        <label id="idNumeroDocumento" for="NumeroDocumento">Numero Documento</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="md-form">
                        <i class="txtcargo" style="left:0"></i>
                        @Html.TextBox("txtcargo", (string)ViewBag.Cargo, htmlAttributes: new { @class = "form-control", disabled = "disabled" })

                        <label id="idCargo" for="Cargo">Cargo</label>
                    </div>
                </div>
            </div>

            <div class="row">
              
                <div class="col-md-5">
                    <div class="md-form">
                        <i class="Sexo" style="left:0;"></i>
                        @Html.TextBoxFor(model => model.Sexo, htmlAttributes: new { @style= "text-align:center", disabled = "disabled", @class = "form-control" })
                        <label  id="idSexo" for="Sexo">Sexo</label>
                    </div>
                </div>
            </div>

            <!-- Estado -->
            @Html.HiddenFor(model => model.Estado)
            <div class="form-check" style="padding-left:0 !important">
                <input type="checkbox" class="form-check-input" id="chkActive" name="chkActive" checked="@Model.Estado" disabled>
                <label class="form-check-label" for="chkActive">Estado</label>
            </div>
            <hr />


            @using (Html.BeginForm("Salir", "T_Persona", FormMethod.Get))
            {
                <button type="submit" class="btn btnmarc Details">Regresar</button>
            }

            <!-- Form -->

        </div>

    </div>
    <!-- Material form login -->
</div>

<script type="text/javascript">
    //$('#Estado').prop('indeterminate', true);
    $("[name=chkActive]").on('click', function () {
        if ($("#chkActive").is(":checked")) {
            $("[name=Estado]").val(true);
        } else {
            $("[name=Estado]").val(false);
        }
    });
</script>

