@model List<Web.Marcacion.Models.T_Persona>
@{
    /**/

    ViewBag.Title = "Index";
}


<h2>Perfil</h2>
@using (Html.BeginForm("Create", "T_Persona", FormMethod.Get))
{
    <button type="submit" class="btn btn-primary">NUEVO</button>
}

@using (Html.BeginForm("Delete", "T_Persona", FormMethod.Get))
{
    <div class="row ">
        <div class="col-lg-12">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>IDPERFIL</th>
                        <th>DESCRIPCION</th>
                        <th>ESTADO</th>
                        <th>ACCIONES</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var olista in Model)
                    {
                    <tr>
                        <td>@olista.ID_Persona</td>
                        <td>@olista.Nombre</td>
                        <td>@olista.Apellido</td>
                        <td>@olista.NumeroDocumento</td>
                        <td>@olista.Correo</td>
                        <td>@olista.Movil</td>
                        <td>@olista.Estado</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = olista.ID_Persona })  |
                            @Html.ActionLink("Detail", "Detail", new { id = olista.ID_Persona }) |
                            @Html.ActionLink("Delete", "Delete", new { id = olista.ID_Persona })

                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

}