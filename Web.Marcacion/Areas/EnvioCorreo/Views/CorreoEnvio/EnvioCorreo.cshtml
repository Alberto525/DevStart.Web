



@{
    ViewBag.Title = "EnvioCorreo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Envio Correo</h2>

<div class="col-lg-5">
    <div class="card">
        <div class="card-header info-color white-text py-4t">
        </div>
        <div class="card-body px-lg-5 pt-0">

            <div class="md-form">
                <i class="fas fa-envelope prefix" style="left:0"></i>
                <input class="form-control" type="text" id="txtDestino" />
                <label for="txtDestino">Para</label>
            </div>

            <div class="md-form">
                <i class="fas fa-envelope prefix" style="left:0"></i>
                <input class="form-control" type="text" id="txtAsunto" />
                <label for="txtAsunto">Asunto</label>
            </div>
            <div class="md-form">
                <i class="fas fa-envelope prefix" style="left:0"></i>
                <textarea class="form-control" type="texta" id="txtMensaje"> </textarea>
                <label for="txtMensaje">Mensaje</label>
            </div>
            <hr />
            <div class="md-form m-2 text-center">
                <button id="btnAgregar" onclick="Enviar()" class="btn btnmarc Agregar"></button>
            </div>

        </div>
    </div>
</div>

<script src="~/js/EnviarCorreo/JSEnviarCorreo.js"></script>



