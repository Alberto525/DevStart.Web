@model Web.Marcacion.Models.T_EmpleadoJornada

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-8 col-md-6 col-sm-12">
    <!-- Material form login -->
    <div class="card">
        <div class="card-header info-color white-text py-4t">
            DETALLE DE LA JORNADA DEL EMPLEADO
        </div>
        <!--Card content-->
        <div class="card-body px-lg-12 pt-0">
            <!-- Form -->
            <!--<form class="text-center" style="color: #757575;" action="" method="post">-->
            @using (Html.BeginForm("Detail", "T_EmpleadoJornada", FormMethod.Post))
            {
                <!-- Nombre -->
                @Html.HiddenFor(model => model.ID_EmpleadoJornada)
                <div class="row">
                    <div class="col-md-6">
                        <div class="md-form">
                            <i class="Nombre" style="left:0"></i>
                            @Html.TextBoxFor(model => model.Nombre, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                            <label id="idNombre" for="Nombre">Nombre</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <!-- Apellido -->
                        <div class="md-form">
                            <i class="Apellido" style="left:0"></i>
                            @Html.TextBoxFor(model => model.Apellido, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                            <label id="idApellido" for="Apellido">Apellidos</label>
                        </div>
                    </div>
                </div>

                <!-- Cargo -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="md-form">
                            <i class="txtcargo" style="left:0"></i>
                            @Html.TextBoxFor(model => model.Cargo, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                            <label id="idCargo" for="Cargo">Cargo</label>
                        </div>
                    </div>
                    <!-- Descripcion -->
                    <div class="col-md-6">
                        <div class="md-form">
                            <i class="txtDescripcion" style="left:0"></i>
                            @Html.TextBoxFor(model => model.Descripcion, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                            <label id="idDescripcion" for="Descripcion">Tipo de Jornada</label>
                        </div>
                    </div>
                </div>
                <!-- HoraEntrada -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="md-form">
                            <i class="Hora" style="left:0"></i>
                            @Html.TextBoxFor(model => model.HoraEntrada, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                            <label id="idHora" for="HoraSalida">Hora de Salida</label>
                        </div>
                    </div>
                    <!-- HoraSalida -->
                    <div class="col-md-6">
                        <div class="md-form">
                            <i class="Hora" style="left:0"></i>
                            @Html.TextBoxFor(model => model.HoraSalida, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                            <label id="idHora" for="HoraSalida">Hora de Salida</label>
                        </div>
                    </div>
                </div>
                <hr />
            }

            @using (Html.BeginForm("Salir", "T_EmpleadoJornada", FormMethod.Get))
            {
                <button type="submit" class="btn btnmarc Details">Regresar</button>
            }

            <!-- Form -->

        </div>

    </div>
    <!-- Material form login -->
</div>


