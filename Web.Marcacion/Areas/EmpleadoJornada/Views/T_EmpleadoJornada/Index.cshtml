@model List<Web.Marcacion.Models.T_EmpleadoJornada>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Jornada del Empleado</h2>

@using (Html.BeginForm("Create", "T_EmpleadoJornada", FormMethod.Get))
{
    <button type="submit" class="btn btn-primary">NUEVO</button>
}

@using (Html.BeginForm("Delete", "T_EmpleadoJornada", FormMethod.Get))
{
    <div class="row ">
        <div class="col-lg-12">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>NOMBRE</th>
                        <th>APELLIDO</th>
                        <th>CARGO</th>
                        <th>TIPO DE JORNADA</th>
                        <th>HORA DE ENTRADA</th>
                        <th>HORA DE SALIDA</th>
                        <th>ACCIONES</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var olista in Model)
                    {
                    <tr>
                        <td>@olista.Nombre</td>
                        <td>@olista.Apellido</td>
                        <td>@olista.Cargo</td>
                        <td>@olista.Descripcion</td>
                        <td>@olista.HoraEntrada</td>
                        <td>@olista.HoraSalida</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = olista.ID_EmpleadoJornada })  |
                            @Html.ActionLink("Detail", "Detail", new { id = olista.ID_EmpleadoJornada }) |
                            @Html.ActionLink("Delete", "Delete", new { id = olista.ID_EmpleadoJornada })

                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

}