@model Web.Marcacion.Models.T_EmpleadoJornada

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-lg-5">
    <!-- Material form login -->
    <div class="card">
        <div class="card-header info-color white-text py-4t">
           CAMBIAR JORNADA DEL EMPLEADO
        </div>
        <!--Card content-->
        <div class="card-body px-lg-5 pt-0">
            <!-- Form -->
            <!--<form class="text-center" style="color: #757575;" action="" method="post">-->
            @using (Html.BeginForm("Edit", "T_EmpleadoJornada", FormMethod.Post))
            {
                <!-- Nombre -->
                @Html.HiddenFor(model => model.ID_EmpleadoJornada)
                <div class="md-form">
                    <i class="fas fa-envelope prefix" style="left:0"></i>
                    @Html.TextBoxFor(model => model.Nombre, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                    <label for="Nombre">Nombres</label>
                </div>
                <!-- Apellido -->
                <div class="md-form">
                    <i class="fas fa-envelope prefix" style="left:0"></i>
                    @Html.TextBoxFor(model => model.Apellido, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                    <label for="Apellido">Apellidos</label>
                </div>
                <!-- Cargo -->
                <div class="md-form">
                    <i class="fas fa-envelope prefix" style="left:0"></i>
                    @Html.TextBoxFor(model => model.Cargo, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
                    <label for="Cargo">Cargo</label>
                </div>

                <div class="editor-label">
                    <label for="Descripcion">Seleccionar tipo de jornada :</label>
                    <div class="editor-field">
                        @Html.DropDownListFor(model => model.ID_TipoJornada, (SelectList)ViewBag.Descripcion, new { @class = "select" })
                    </div>
                </div>
                
                <hr />
                <div class="md-form m-2 text-center ">
                    <button type="submit" class="btn btn-md btn-success">Actualizar</button>
                </div>
            }

            <div class="md-form m-2 text-center">
                <button onclick="location.href='@Url.Action("Salir", "T_EmpleadoJornada")'" type="submit" class="btn btn-md btn-primary">Regresar</button>
            </div>

            @*using (Html.BeginForm("Salir", "T_EmpleadoJornada", FormMethod.Get))
        {
            <button type="submit" class="btn btn-primary">SALIR</button>
        }*@

            <!-- Form -->

        </div>

    </div>
    <!-- Material form login -->
</div>

