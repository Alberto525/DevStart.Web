
@{
    ViewBag.Title = "Success";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Success</h2>
@using (Html.BeginForm("Delete", "T_Perfil", FormMethod.Get))
{
    <div class="row ">
        <div class="col-lg-12">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>IDPERFIL</th>
                        <th>DESCRIPCION</th>
                        <th>ACCIONES</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var olista in ViewBag.ListPerfil)
                    {
                        <tr>
                            <td>@olista.ID_Perfil</td>
                            <td>@olista.Descripcion</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = olista.ID_Perfil })  |
                                @Html.ActionLink("Detail", "Detail", new { id = olista.ID_Perfil }) |
                                @Html.ActionLink("Delete", "Delete", new { id = olista.ID_Perfil })

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

}