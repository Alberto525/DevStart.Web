@model Web.Marcacion.Models.T_Perfil

@{
    ViewBag.Title = "Importar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Importar</h2>
<form action="" method="post" enctype="multipart/form-data">


    <div class="display-field">
        <label>
            Busqueda del archivo:
            <input type="file" id="input-file" onchange='uploadFile(this)' style="display:none">
            <label for="input-file" id="file-name">Ubicar archivo de carga…</label>
            <label id="file-name2">Aún no ha seleccionado un archivo</label>
        </label>
    </div>
    <br />
    <input type="submit" class="" title="Grabar" value="CARGAR" />
</form>


<script>

    function uploadFile(target) {
        document.getElementById("file-name2").innerHTML = target.files[0].name;
    }

</script>

<style>

    #file-name {
        padding: 5px 10px;
        background: #ddd;
        color: #000;
        cursor: pointer;
        border: solid #b6b4b0 1px;
    }
</style>
